generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id        String              @id @default(cuid())
  name      String              @unique
  icon      String              @default("ðŸ‘¤")
  password  String?
  isAdmin   Boolean             @default(false)
  createdAt DateTime            @default(now())
  dramas    Drama[]             @relation("DramaParticipants")
  votes     DramaSeverityVote[]
}

model Drama {
  id           String              @id @default(cuid())
  title        String
  details      String              @default("")
  severity     Int                 @default(3)
  isFinished   Boolean             @default(false)
  finishedAt   DateTime?
  createdAt    DateTime            @default(now())
  participants Person[]            @relation("DramaParticipants")
  votes        DramaSeverityVote[]
}

model DramaSeverityVote {
  id        String   @id @default(cuid())
  dramaId   String
  personId  String
  severity  Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  drama  Drama  @relation(fields: [dramaId], references: [id], onDelete: Cascade)
  person Person @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@unique([dramaId, personId])
}
